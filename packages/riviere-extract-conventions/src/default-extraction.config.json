{
  "$schema": "https://living-architecture.dev/schemas/extraction-config.schema.json",
  "modules": [
    {
      "name": "default",
      "path": "**/*.ts",
      "api": {
        "find": "methods",
        "where": {
          "inClassWith": {
            "hasDecorator": {
              "name": "APIContainer",
              "from": "@living-architecture/riviere-extract-conventions"
            }
          }
        },
        "extract": {
          "apiType": { "literal": "REST" }
        }
      },
      "useCase": {
        "find": "classes",
        "where": {
          "hasDecorator": {
            "name": "UseCase",
            "from": "@living-architecture/riviere-extract-conventions"
          }
        }
      },
      "domainOp": {
        "find": "methods",
        "where": {
          "inClassWith": {
            "hasDecorator": {
              "name": "DomainOpContainer",
              "from": "@living-architecture/riviere-extract-conventions"
            }
          }
        },
        "extract": {
          "operationName": { "fromMethodName": true }
        }
      },
      "event": {
        "find": "classes",
        "where": {
          "hasDecorator": {
            "name": "Event",
            "from": "@living-architecture/riviere-extract-conventions"
          }
        },
        "extract": {
          "eventName": { "fromClassName": true }
        }
      },
      "eventHandler": {
        "find": "methods",
        "where": {
          "inClassWith": {
            "hasDecorator": {
              "name": "EventHandlerContainer",
              "from": "@living-architecture/riviere-extract-conventions"
            }
          }
        },
        "extract": {
          "subscribedEvents": { "fromGenericArg": { "interface": "IEventHandler", "position": 0 } }
        }
      },
      "ui": {
        "find": "classes",
        "where": {
          "hasDecorator": {
            "name": "UI",
            "from": "@living-architecture/riviere-extract-conventions"
          }
        },
        "extract": {
          "route": { "fromProperty": { "name": "route", "kind": "static" } }
        }
      }
    }
  ]
}
