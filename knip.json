{
  "$schema": "https://knip.dev/reference/knip-json",
  "workspaces": {
    "apps/eclair": {
      "entry": [
        "src/main.tsx"
      ],
      "project": [
        "src/**/*.ts",
        "src/**/*.tsx"
      ]
    },
    "apps/docs": {
      "entry": [
        ".vitepress/config.ts"
      ],
      "project": [
        ".vitepress/**/*.ts"
      ]
    },
    "packages/*": {
      "project": [
        "src/**/*.ts"
      ]
    }
  },
  "ignore": [
    "**/node_modules/**",
    "**/*.d.ts",
    "**/dist/**",
    "**/.vitepress/dist/**",
    "**/coverage/**"
  ]
}
