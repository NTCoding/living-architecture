{
  "$schema": "https://knip.dev/reference/knip-json",
  "ignoreDependencies": [
    "tailwindcss",
    "zod"
  ],
  "ignoreBinaries": [
    "playwright"
  ],
  "workspaces": {
    "apps/eclair": {
      "entry": [
        "src/main.tsx"
      ],
      "project": [
        "src/**/*.ts",
        "src/**/*.tsx"
      ]
    },
    "apps/docs": {
      "entry": [
        ".vitepress/config.ts"
      ],
      "project": [
        ".vitepress/**/*.ts",
        ".vitepress/**/*.vue"
      ]
    },
    "packages/riviere-cli": {
      "entry": [
        "src/bin.ts",
        "src/index.ts"
      ],
      "project": [
        "src/**/*.ts"
      ]
    },
    "packages/*": {
      "project": [
        "src/**/*.ts"
      ]
    },
    "tools/dev-workflow": {
      "entry": [
        "complete-task/complete-task.ts",
        "get-pr-feedback/get-pr-feedback.ts",
        "respond-to-feedback/respond-to-feedback.ts",
        "dev-workflow-hooks/dev-workflow-hooks.ts"
      ],
      "project": [
        "**/*.ts"
      ]
    }
  },
  "ignore": [
    "**/node_modules/**",
    "**/*.d.ts",
    "**/dist/**",
    "**/.vitepress/dist/**",
    "**/coverage/**"
  ]
}
