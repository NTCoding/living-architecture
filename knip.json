{
  "$schema": "https://knip.dev/reference/knip-json",
  "ignoreDependencies": [
    "tailwindcss",
    "zod"
  ],
  "ignoreBinaries": [
    "playwright"
  ],
  "workspaces": {
    "apps/eclair": {
      "entry": [
        "src/main.tsx"
      ],
      "project": [
        "src/**/*.ts",
        "src/**/*.tsx"
      ]
    },
    "apps/docs": {
      "entry": [
        ".vitepress/config.ts"
      ],
      "project": [
        ".vitepress/**/*.ts",
        ".vitepress/**/*.vue"
      ]
    },
    "packages/riviere-cli": {
      "entry": [
        "src/bin.ts",
        "src/index.ts"
      ],
      "project": [
        "src/**/*.ts"
      ]
    },
    "packages/*": {
      "project": [
        "src/**/*.ts"
      ]
    },
    "tools/dev-workflow": {
      "entry": [
        "features/complete-task/entrypoint/cli.ts",
        "features/get-pr-feedback/entrypoint/cli.ts",
        "features/respond-to-feedback/entrypoint/cli.ts",
        "features/claude-hooks/entrypoint/hook-router.ts",
        "features/claude-hooks/claude-hooks.spec.ts",
        "shell/index.ts"
      ],
      "project": [
        "**/*.ts"
      ],
      "ignoreDependencies": [
        "vitest"
      ]
    }
  },
  "ignore": [
    "**/node_modules/**",
    "**/*.d.ts",
    "**/dist/**",
    "**/.vitepress/dist/**",
    "**/coverage/**"
  ]
}
