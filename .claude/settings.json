{
  "permissions": {
    "deny": [
      "Edit(./tsconfig.base.json)",
      "Edit(./tsconfig.json)",
      "Edit(./eslint.config.mjs)",
      "Edit(./nx.json)",
      "Edit(./.husky/*)",
      "Edit(./pnpm-workspace.yaml)",
      "Edit(./.gitignore)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./apps/**/.env)",
      "Read(./apps/**/.env.*)",
      "Read(./packages/**/.env)",
      "Read(./packages/**/.env.*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/block-dangerous-commands.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/convention-guardrails.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/task-completion-reminder.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "task-check@claude-skillz": true,
    "automatic-code-review@claude-skillz": false,
    "development-skills@claude-skillz": true,
    "full-codebase-review@claude-skillz": true
  },
  "automaticCodeReview": {
    "enabled": false,
    "fileExtensions": [
      "ts",
      "tsx"
    ],
    "rulesFile": ".claude/automatic-code-review/rules.md"
  }
}
