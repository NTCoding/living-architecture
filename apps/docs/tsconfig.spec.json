{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/vitest",
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "vitest.config.mts",
    ".vitepress/**/*.spec.ts",
    ".vitepress/**/*.d.ts"
  ]
}
