{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["on saturday"],
  "timezone": "UTC",
  "prConcurrentLimit": 5,
  "automerge": false,
  "packageRules": [
    {
      "description": "Auto-merge patch updates when CI passes",
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Group all NX packages",
      "groupName": "nx",
      "matchPackageNames": ["/^@nx//", "/^nx$/"]
    },
    {
      "description": "Group all type definitions",
      "groupName": "types",
      "matchPackageNames": ["/^@types//"]
    },
    {
      "description": "Group ESLint packages",
      "groupName": "eslint",
      "matchPackageNames": ["/^eslint$/", "/^@eslint//", "/^eslint-/"]
    },
    {
      "description": "Group Vitest packages",
      "groupName": "vitest",
      "matchPackageNames": ["/^vitest$/", "/^@vitest//"]
    }
  ]
}
